<%= form_for @student_mark, :html => { :class => "form-horizontal student_mark" } do |f| %>

    <% if @student_mark.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student_mark.errors.count, "error") %> prohibited this student_mark from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student_mark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :roll, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :roll, :class => 'form-control' %>
    </div>
    <%= error_span(@student_mark[:roll]) %>
  </div>
  <div class="control-group">
    <%= f.label :student_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :student_id, :class => 'form-control' %>
    </div>
    <%= error_span(@student_mark[:student_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :mark, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mark, :class => 'form-control' %>
    </div>
    <%= error_span(@student_mark[:mark]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            student_marks_path, :class => 'btn btn-default' %>

<% end %>
